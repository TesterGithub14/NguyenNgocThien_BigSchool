@model IEnumerable<NguyenNgocThien_BigSchool.Models.Course>

@{ ViewBag.Title = "ListMine";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
<li>
    <div class="date">
        <div class="month">
            @course.DateTime.ToString("MM")
        </div>
        <div class="day">
            @course.DateTime.ToString("dd")
        </div>
    </div>
    <div class="details">
        <span class="lecture">
            @course.LecturerName
        </span>
        <br />
        <span class="category">
            @course.Category.Name
        </span>
    </div>
    <div class="action">
        <a href="">Edit</a>
        <a href="">Delete</a>
    </div>
</li>}
    </ul>
</div>
